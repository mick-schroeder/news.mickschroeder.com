{
  "singleQuote": true,
  "trailingComma": "es5",
  "semi": true,
  "tabWidth": 2,
  "printWidth": 100,
  "arrowParens": "always",
  "quoteProps": "as-needed",
  "endOfLine": "lf",

  "jsxSingleQuote": false,

  "proseWrap": "preserve",

  "overrides": [
    {
      "files": ["*.{js,jsx,ts,tsx}"],
      "options": { "singleAttributePerLine": false }
    }
  ]
}
